<div class="header">
  <h1>Business Service Providers</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
    <label for="sources">Keyword</label>
      {{input class="pure-input-1" value=qField}}
      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-12-24">
          <label for="ita-offices">ITA Offices</label>
          {{view "select2"
            content=itaOfficesList
            selection=itaOfficesField
            id="ita-offices"
            class="pure-u-23-24"
            multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-12-24">
          <label for="categories">Categories</label>
          {{view "select2"
            content=categoriesList
            selection=categoriesField
            id="categories"
            class="pure-u-23-24"
            multiple=true}}
        </div>

        <div class="pure-u-1">
        {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
