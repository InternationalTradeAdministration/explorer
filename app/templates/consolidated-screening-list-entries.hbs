<div class="header">
  <h1>Consolidated Screening List</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>
      <label for="q">Keyword</label>
      {{input class="pure-input-1" value=qField}}

      <div class="pure-u-1 pure-u-md-14-24">
        <label for="name">Name</label>
        {{input class="pure-input-1" value=nameField}}
      </div>

      <div class="pure-u-1 pure-u-md-11-24">
        <label for="fuzzyName">Fuzzy Name</label>
        {{view "select2"
        content=fuzzyNameList
        value=fuzzyNameField
        optionValuePath="content.value"
        optionLabelPath="content.label"
        prompt="Off"
        id="fuzzyName"
        class="pure-input-1"}}
      </div>

      <div class="pure-u-1">
        <label for="address">Address</label>
        {{input class="pure-input-1" value=addressField}}
      </div>

      <div class="pure-g">

        <div class="pure-u-1  pure-u-md-1">
          <label for="sources">Sources</label>
          {{view "select2"
            content=sourceList
            selection=sourcesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sources"
            class="pure-input-1"
            multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-2-3 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Start Date</label>
          <br>
          {{view "datepicker"
            value=startDateFieldStart
            id="start-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=startDateFieldEnd
            id="start-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>End Date</label>
          <br>
          {{view "datepicker"
            value=endDateFieldStart
            id="end-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=endDateFieldEnd
            id="end-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Expiration Date</label>
          <br>
          {{view "datepicker"
            value=expirationDateFieldStart
            id="expiration-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=expirationDateFieldEnd
            id="expiration-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Issue Date</label>
          <br>
          {{view "datepicker"
            value=issueDateFieldStart
            id="issue-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=issueDateFieldEnd
            id="issue-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>

      </div>

    </fieldset>
  </form>

  {{outlet}}
</div>
