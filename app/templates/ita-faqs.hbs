<div class="header">
  <h1>FAQs on Exporting</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>

      {{input class="pure-input-1" value=qField placeholder="Ask a question"}}

      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Update Date</label>
          <br>
          {{view "datepicker"
            value=updateDateFieldStart
            id="update-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=updateDateFieldEnd
            id="update-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-11-24">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-u-23-24"
            multiple=true}}
        </div>

        <div class="pure-u-11-24">
          <label for="industries">Industries</label>
          {{view "select2"
            content=industryList
            selection=industriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="industries"
            class="pure-u-23-24"
            multiple=true}}
        </div>

        <div class="pure-u-11-24">
          <label for="topics">Topics</label>
          {{view "select2"
            content=topicList
            selection=topicsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="topics"
            class="pure-u-23-24"
            multiple=true}}
        </div>

        <div class="pure-u-1">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>

      </div>

    </fieldset>
  </form>

  {{outlet}}
</div>
