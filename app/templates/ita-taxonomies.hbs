<div class="header">
  <h1>ITA Taxonomies</h1>
</div>
<div class="content">
  <form class="pure-form pure-form-stacked search" {{action "search" on="submit"}}>
    <fieldset>
      <label for="sources">Keyword</label>
      {{input class="pure-input-1" value=qField}}
      
      <div class="pure-u-11-24">
        <label for="types">Types</label>
        {{view "select2"
          content=typeList
          selection=typesField
          optionValuePath="content.value"
          optionLabelPath="content.label"
          id="types"
          class="pure-u-23-24"
          multiple=true}}
      </div>

      <div class="pure-u-1 pure-u-md-11-24">
          <label>Labels</label>
          {{input class="pure-input-11-12 pure-u-23-24" value=labelsField}}
      </div>

      {{input type="submit" value="Search" class="pure-u-1 pure-u-md-11-24 pure-button pure-button-primary"}}

    </fieldset>
  </form>

  {{outlet}}
</div>
