<div class="header">
  <h1>Market Research Library</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>
      <div class="pure-g">
        <div class="pure-u-1">
          <label>Keyword</label>
          {{input class="pure-input-1" value=qField}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Expiration Date</label>
          <br>
          {{view "datepicker"
            value=expirationDateFieldStart
            id="expiration-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=expirationDateFieldEnd
            id="expiration-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-u-1"
            multiple="true"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label for="industries">Industries</label>
          {{view "select2"
            content=industryList
            selection=industriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="industries"
            class="pure-u-1"
            multiple="true"}}
        </div>

        <div class="pure-u-1">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>
      </div>
    </fieldset>
  </form>

  {{outlet}}
</div>
