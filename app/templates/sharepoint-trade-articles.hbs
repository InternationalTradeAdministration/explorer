<div class="header">
  <h1>Trade News & Articles</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>

      <label>Keyword</label>
      {{input class="pure-input-1" value=qField}}

      <div class="pure-g">

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="export_phases">Export Phases</label>
          {{view "select2"
            content=exportPhaseList
            selection=exportPhasesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="export_phases"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="industries">Industries</label>
          {{view "select2"
            content=industryList
            selection=industriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="industries"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="topics">Topics</label>
          {{view "select2"
            content=topicList
            selection=topicsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="topics"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="sub_topics">Sub Topics</label>
          {{view "select2"
            content=subTopicList
            selection=subTopicsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sub_topics"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="geo_regions">Geo Regions</label>
          {{view "select2"
            content=geoRegionList
            selection=geoRegionsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="geo_regions"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="geo_subregions">Geo Subregions</label>
          {{view "select2"
            content=geoSubregionList
            selection=geoSubregionsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="geo_subregions"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="trade_regions">Trade Regions</label>
          {{view "select2"
            content=tradeRegionList
            selection=tradeRegionsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="trade_regions"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1-3">
        <div class="dropdown_filter">
          <label for="trade_programs">Trade Programs</label>
          {{view "select2"
            content=tradeProgramList
            selection=tradeProgramsField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="trade_programs"
            class="pure-input-1"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-11-24">
        <div class="dropdown_filter">
          <label for="trade_initiatives">Trade Initiatives</label>
          {{view "select2"
            content=tradeInitiativeList
            selection=tradeInitiativesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="trade_initiatives"
            class="pure-u-23-24"
            multiple=true}}
        </div>
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Creation Date</label>
          <br>
          {{view "datepicker"
            value=creationDateFieldStart
            id="creation-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=creationDateFieldEnd
            id="creation-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Release Date</label>
          <br>
          {{view "datepicker"
            value=releaseDateFieldStart
            id="release-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=releaseDateFieldEnd
            id="release-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Expiration Date</label>
          <br>
          {{view "datepicker"
            value=expirationDateFieldStart
            id="expiration-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=expirationDateFieldEnd
            id="expiration-date-end"
            class="pure-u-9-24"}}
        </div>
        
        <div class="pure-u-1">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>

      </div>

    </fieldset>
  </form>

  {{outlet}}
</div>
