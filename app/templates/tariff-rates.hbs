<div class="header">
  <h1>Tariff Rates</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>

      <label for="sources">Keyword</label>
      {{input class="pure-input-1" value=qField}}

      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-11-24">
          <label for="sources">Sources</label>
          {{view "select2"
          content=sourceList
          selection=sourcesField
          optionValuePath="content.value"
          optionLabelPath="content.label"
          id="sources"
          class="pure-u-23-24"
          multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Final Year</label>
          <br>
          {{input class="pure-u-9-24" value=finalYearFieldStart}}
          To
          {{input class="pure-u-9-24" value=finalYearFieldEnd}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Partner Start Year</label>
          <br>
          {{input class="pure-u-9-24" value=partnerYearFieldStart}}
          To
          {{input class="pure-u-9-24" value=partnerYearFieldEnd}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Reporter Start Year</label>
          <br>
          {{input class="pure-u-9-24" value=reporterYearFieldStart}}
          To
          {{input class="pure-u-9-24" value=reporterYearFieldEnd}}
        </div>

        <div class="pure-u-1">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>

      </div>

    </fieldset>
  </form>

  {{outlet}}
</div>
