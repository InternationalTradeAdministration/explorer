<div class="header">
  <h1>Trade Events</h1>
</div>
<div class="content">
  <form class="pure-form search" {{action "search" on="submit"}}>
    <fieldset>

      <label for="sources">Keyword</label>
      {{input class="pure-input-1" value=qField}}

      <div class="pure-g">

        <div class="pure-u-1  pure-u-md-1">
          <label for="sources">Sources</label>
          {{view "select2"
            content=sourceList
            selection=sourcesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="sources"
            class="pure-input-1"
            multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>Start Date</label>
          <br>
          {{view "datepicker"
            value=startDateFieldStart
            id="start-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=startDateFieldEnd
            id="start-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24">
          <label>End Date</label>
          <br>
          {{view "datepicker"
            value=endDateFieldStart
            id="end-date-start"
            class="pure-u-9-24"}}
          To
          {{view "datepicker"
            value=endDateFieldEnd
            id="end-date-end"
            class="pure-u-9-24"}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24 countries">
          <label for="countries">Countries</label>
          {{view "select2"
            content=countryList
            selection=countriesField
            optionValuePath="content.value"
            optionLabelPath="content.label"
            id="countries"
            class="pure-input-1"
            multiple=true}}
        </div>

        <div class="pure-u-1 pure-u-md-11-24 sources">
          {{input type="submit" value="Search" class="pure-button pure-button-primary"}}
        </div>

      </div>

    </fieldset>
  </form>

  {{outlet}}
</div>
